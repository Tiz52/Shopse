{
  "extends": [
    "next",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier",
    "react",
    "import",
    "@typescript-eslint"
  ],
  "parser": "@typescript-eslint/parser",
  "rules":{
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "all",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": false,
        "bracketSpacing": false,
        "arrowParens": "always",
        "endOfLine":"auto"
      }
    ]
  }
}
